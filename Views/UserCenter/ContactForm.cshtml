@{
    ViewBag.Title = "ContactForm";
    Layout = null;
}
<div class="row fromTop">
    <div class="col-md-12">
        <form id="contact">
            <div class="row form-row">
                <input type="hidden" id="contactId" />
                <div class="col-md-offset-3 control-group">
                    <label class="form-label">
                        <span class="require-tip">*</span>姓名
                    </label>
                    <input type="text" id="Name" data-verify="required" error-message="姓名不能为空！" />
                </div>
                <div class="col-md-offset-3 control-group">
                    <label class="form-label">
                        <span class="require-tip">*</span>身份证号
                    </label>
                    <input type="text" id="IdCardNo" data-verify="idcard"  error-message="身份证号不合法！" />
                </div>
                <div class="col-md-offset-3 control-group" id="SexDiv">
                    <label class="form-label">
                        <span class="require-tip"></span>性别
                    </label>
                    <input type="text" id="Gender" readonly="readonly" />
                </div>
                <div class="col-md-offset-3 control-group">
                    <label class="form-label">
                        <span class="require-tip">*</span>手机号
                    </label>
                    <input type="text" id="CellNumber" data-verify="phone"  error-message="手机号不合法！" />
                </div>
                
                <div class="col-md-offset-4 control-group BackDiv">
                    <button id="btn-back-contacts" type="button" class="btn-green min">返回</button>
                    <button id="btn-save-contacts" type="button" class="btn-green min">保存</button>
                </div>
                <!--错误提示信息-->
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                        <div id="contact-help-block" class="alert alert-danger contatcStutas" role="alert">
                            <strong>错误提示!</strong>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
